# AnythingLLM Environment Configuration
# Copy this file to .env and fill in your actual values

# Security
JWT_SECRET=your-very-secure-jwt-secret-please-change-this-$(openssl rand -hex 32)
AUTH_TOKEN=  # Leave empty for first setup, set after initial login

# LLM Provider Configuration
# Option 1: Direct Anthropic API
ANTHROPIC_API_KEY=sk-ant-api03-your-actual-key-here
AGENT_PROVIDER=anthropic
AGENT_MODEL=claude-3-5-sonnet-20241022

# Option 2: OpenAI API (or OpenAI-compatible endpoints)
OPENAI_API_KEY=sk-your-openai-api-key-here
# For LiteLLM proxy, use: http://litellm:4000
OPENAI_BASE_URL=

# Option 3: Using LiteLLM proxy (recommended for flexibility)
LLM_PROVIDER=openai
# Point to LiteLLM proxy endpoint
OPENAI_API_KEY=sk-1234  # LiteLLM master key
OPENAI_BASE_URL=http://litellm:4000

# Embedding Configuration
EMBEDDING_ENGINE=openai
EMBEDDING_MODEL_PREF=text-embedding-3-small
# For local embeddings, change to:
# EMBEDDING_ENGINE=native
# EMBEDDING_MODEL_PREF=all-MiniLM-L6-v2

# Vector Database
VECTOR_DB=lancedb  # Options: lancedb, chroma, pinecone, qdrant, weaviate

# LiteLLM Configuration (if using LiteLLM proxy)
LITELLM_MASTER_KEY=sk-1234  # Change this to a secure key

# Database passwords (change these in production)
POSTGRES_PASSWORD=securepassword123

# Feature Flags
ENABLE_EXPORT=true
DISABLE_TELEMETRY=true
AGENT_CUSTOM_SKILLS=true
